rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // üë§ USERS: The core identity layer
    match /users/{userId} {
      allow read: if request.auth != null;
      // Allow user to write their own doc, OR allow balance/verification updates (for manager)
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['balance', 'isVerified'])
      );
      
      match /following/{followingId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /followers/{followerId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == followerId;
      }
    }
    
    // üì∏ POSTS: The influence layer
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Allow author to update/delete, OR allow others to update interaction counters/arrays
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedIds', 'shares', 'comments'])
      );
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // üí¨ COMMENTS: Subcollection for posts
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    // üì± STORIES: The ephemeral pulse
    match /stories/{storyId} {
      // Stories are public for global discovery
      allow read: if true;
      
      // Only authenticated users can upload
      allow create: if request.auth != null;
      
      // Only the author can delete or reach-update (views)
      allow update: if request.auth != null; // Simpler for view counts
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // üîî NOTIFICATIONS: The social heartbeat
    match /notifications/{notifId} {
      allow read: if request.auth != null && (
        resource.data.toUserId == request.auth.uid || 
        resource.data.fromUserId == request.auth.uid
      );
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.toUserId == request.auth.uid || 
        resource.data.fromUserId == request.auth.uid
      );
    }

    // üí≥ DEPOSITS: Pending approvals
    match /depositRequests/{requestId} {
      allow read, create, update: if request.auth != null;
    }

    // ÔøΩÔ∏è VERIFICATION: Identity checks
    match /verificationRequests/{requestId} {
      allow read, create, update: if request.auth != null;
    }

    // ÔøΩüí∏ TRANSACTIONS: Wallet activity
    match /transactions/{txId} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid ||
        resource.data.fromUserId == request.auth.uid
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // üí¨ MESSAGING: High-security communication layer
    match /conversations/{chatId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;

      match /messages/{messageId} {
        allow read: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(chatId)).data.participants;
        allow create: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(chatId)).data.participants &&
          request.resource.data.senderId == request.auth.uid;
        allow update: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(chatId)).data.participants &&
          (resource.data.senderId == request.auth.uid || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reaction']));
      }
    }

    // üìû CALLS: WebRTC signaling layer
    match /calls/{callId} {
      allow read: if request.auth != null && (
        resource.data.callerUid == request.auth.uid || 
        resource.data.targetUid == request.auth.uid
      );
      allow create: if request.auth != null && request.resource.data.callerUid == request.auth.uid;
      allow update: if request.auth != null && (
        resource.data.callerUid == request.auth.uid || 
        resource.data.targetUid == request.auth.uid
      );
      allow delete: if request.auth != null && resource.data.callerUid == request.auth.uid;

      match /candidates/{candidateId} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/calls/$(callId)).data.callerUid == request.auth.uid ||
          get(/databases/$(database)/documents/calls/$(callId)).data.targetUid == request.auth.uid
        );
      }
    }
    
    // üö´ DEFAULT: Guard the perimeter
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
